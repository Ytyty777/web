<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] — 262310_App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" 
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light">
    <header class="text-center py-5">
        <h1 class="display-4"><a class="text-decoration-none text-light" href="@Url.Action("Index", "Home")">262310App</a></h1>
        <p class="text-muted">find YT</p>
        <div class="d-flex justify-content-center align-items-center flex-wrap mt-3">
            <a class="btn btn-success mx-2" href="@Url.Action("Index", "Home")">Wyszukiwanie</a>
            <a class="btn btn-primary mx-2" href="@Url.Action("Favorites", "Home")">Ulubione</a>
        </div>
    </header>

    <main class="container py-5">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/bootstrap.bundle.min.js"></script>
</body>
</html>
